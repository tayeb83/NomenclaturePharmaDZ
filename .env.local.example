# ─── POSTGRESQL LOCAL ────────────────────────────────────────
# Option A : URL complète (recommandé)
DATABASE_URL=postgresql://postgres:motdepasse@localhost:5432/pharmaveille

# Option B : variables séparées
# PGHOST=localhost
# PGPORT=5432
# PGDATABASE=pharmaveille
# PGUSER=postgres
# PGPASSWORD=motdepasse

# Mettre "true" uniquement pour les hébergeurs cloud (Railway, Render, Neon...)
DATABASE_SSL=false

# ─── APP ─────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=https://pharmaveille-dz.vercel.app
NEXT_PUBLIC_APP_NAME=PharmaVeille DZ
# Clé secrète pour sécuriser les API routes (génère une chaîne aléatoire)
API_SECRET_KEY=change_this_to_a_random_64_char_string

# ─── NEWSLETTER — BREVO (ex-Sendinblue) ─────────────────────
# Inscription gratuite sur brevo.com → API Keys → Créer une clé
BREVO_API_KEY=xkeysib-...
BREVO_SENDER_EMAIL=noreply@pharmaveille-dz.com
BREVO_SENDER_NAME=PharmaVeille DZ
# ID de la liste Brevo pour les abonnés (créer dans Contacts > Listes)
BREVO_LIST_ID=1

# ─── FACEBOOK ────────────────────────────────────────────────
# Graph API : developers.facebook.com > Mes Apps > Token de page
FACEBOOK_PAGE_ACCESS_TOKEN=EAAxxxxx...
FACEBOOK_PAGE_ID=123456789012345

# ─── TWITTER / X ─────────────────────────────────────────────
# developer.twitter.com > Projects & Apps > Keys and tokens
TWITTER_API_KEY=xxxx
TWITTER_API_SECRET=xxxx
TWITTER_ACCESS_TOKEN=xxxx-xxxx
TWITTER_ACCESS_SECRET=xxxx

# ─── CRON SECRET ─────────────────────────────────────────────
# Clé pour protéger les endpoints de cron (publication auto)
CRON_SECRET=change_this_too
